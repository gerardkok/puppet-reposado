<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>LocalCatalogURLBase</key>
    <string><%= @local_catalog_url_base -%></string>
    <key>UpdatesMetadataDir</key>
    <string><%= @metadata_dir -%></string>
    <key>UpdatesRootDir</key>
    <string><%= @document_root -%></string>
<% unless @apple_catalogs.empty? -%>
    <key>AppleCatalogURLs</key>
    <array>
<% @apple_catalogs.each do |cat| -%>
        <string>http://swscan.apple.com/content/catalogs/others/index-<%= cat -%>.merged-1.sucatalog</string>
<% end -%>
    </array>
<% end -%>
</dict>
</plist>
