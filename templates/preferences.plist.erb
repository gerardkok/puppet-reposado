<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>LocalCatalogURLBase</key>
    <string><%= @local_catalog_url_base -%></string>
    <key>UpdatesMetadataDir</key>
    <string><%= @metadata_dir -%></string>
    <key>UpdatesRootDir</key>
    <string><%= @document_root -%></string>
<% unless @apple_catalogs.empty? -%>
    <key>AppleCatalogURLs</key>
    <array>
<% @catalog_urls.each do |cat| -%>
        <string>http://swscan.apple.com<%= cat -%>.sucatalog</string>
<% end -%>
    </array>
<% end -%>
<% unless @additional_curl_options.empty? -%>
    <key>AdditionalCurlOptions</key>
    <array>
<% @additional_curl_options.each do |opt| -%>
        <string><%= opt -%></string>
<% end -%>
    </array>
<% end -%>
<% unless @preferred_localizations.empty? -%>
    <key>PreferredLocalizations</key>
    <array>
<% @preferred_localizations.each do |pref| -%>
        <string><%= pref -%></string>
<% end -%>
    </array>
<% end -%>
<% if @curl_path -%>
    <key>CurlPath</key>
    <string><%- @curl_path -%></string>
<% end -%>
<% if @repo_sync_log_file -%>
    <key>RepoSyncLogFile</key>
    <string>@repo_sync_log_file</string>
<% end -%>
</dict>
</plist>
